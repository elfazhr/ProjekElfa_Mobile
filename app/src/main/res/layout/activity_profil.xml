<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity_profil"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/coklat_tua">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_user" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="10dp">

            <ImageView
                android:onClick="backs"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_back" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="70dp"
        android:text="Profile"
        android:textStyle="bold"
        android:textColor="#46321A"
        android:textSize="25sp" />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:id="@+id/rl_klik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:focusable="true"
            android:foreground="?selectableItemBackground">

            <ImageView
                android:id="@+id/gambar_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="40px"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/nama_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gambar_user"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-120dp"
                android:layout_toEndOf="@+id/gambar_user"
                android:text="Venda12"
                android:textColor="#46321A"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_user"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/gambar_user"
                android:text="venda12@gmail.com"
                android:textColor="#000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/nohp_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_user"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/gambar_user"
                android:text="+62 81122334455"
                android:textColor="#000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/join_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nohp_user"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/gambar_user"
                android:text="Join : 15 Oct 2022"
                android:textColor="#000"
                android:textSize="13sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="260dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/opsi_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="35px"
            android:src="@drawable/opsi_bookmark" />

        <ImageView
            android:id="@+id/opsi_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="35px"
            android:src="@drawable/opsi_notif" />

        <ImageView
            android:id="@+id/opsi_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="35px"
            android:src="@drawable/opsi_setting" />

        <ImageView
            android:id="@+id/opsi_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="35px"
            android:src="@drawable/opsi_payment" />


    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#E5D4BF"
            app:cardCornerRadius="12dp"
            android:id="@+id/btn_history">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="19dp"
                    android:background="@drawable/panahleft" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"

                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bill" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="45dp"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingTop="4dp"
                    android:text="Your Orders"
                    android:textColor="@color/black"

                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            app:cardBackgroundColor="#E5D4BF"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="19dp"
                    android:background="@drawable/panahleft" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"

                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="45dp"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingTop="4dp"
                    android:text="Help Center"
                    android:textColor="@color/black"

                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="160dp"
            app:cardBackgroundColor="#E5D4BF"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="19dp"
                    android:background="@drawable/panahleft" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"

                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gambar_logout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="45dp"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingTop="4dp"
                    android:text="Log Out"
                    android:textColor="@color/black"

                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>




</RelativeLayout>
