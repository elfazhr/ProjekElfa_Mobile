<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity_detail_roti"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/coklat_tua">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end">

                <ImageView
                    android:id="@+id/menuju_ke_profil"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:onClick="profilsz"
                    android:background="@drawable/icon_user" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/menuju_kembali"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:onClick="backsz"
                    android:background="@drawable/icon_back" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/nama_roti_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Bread"
        android:textAlignment="center"
        android:textColor="#46321A"
        android:textSize="25sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="125dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/gambar_roti_detail"
            android:layout_width="match_parent"
            android:layout_height="257dp"

            android:src="@drawable/lokasi" />

        <TextView
            android:id="@+id/nama_roti_detail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="270dp"
            android:layout_marginBottom="5dp"
            android:text="My Bread"
            android:textColor="#5C5C5C"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="297dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/harga_roti_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Harga"
                android:textColor="@color/coklat_tua"
                android:textSize="24dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/detail_roti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="340dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins_regular"
            android:justificationMode="inter_word"
            android:text="My Bread Is One Of The Best Bread Providers Served To All Customers. For us the quality of bread making is the main thing and really needs attention. That's why every quality of bread we serve is the best with a perfect taste on the tongue."
            android:textColor="#5C5C5C"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>
