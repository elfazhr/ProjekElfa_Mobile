<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity_about">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/coklat_tua">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end">

            <ImageView
                android:id="@+id/btn_keprofil"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_user" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/btn_kembali"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_back" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppins_bold"
        android:text="About"
        android:textColor="#46321A"
        android:textSize="25sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="125dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/lokasi"
            android:layout_width="391dp"
            android:layout_height="257dp"
            android:layout_marginLeft="10px"
            android:src="@drawable/lokasi" />

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="270dp"
            android:layout_marginBottom="5dp"
            android:text="My Bread"
            android:textColor="#5C5C5C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="305dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:src="@drawable/icon_location" />
            <TextView
                android:id="@+id/b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Soekarno Hatta Street 201, Pekanbaru"
                android:textColor="#5C5C5C"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="340dp"
            android:layout_marginBottom="5dp"
            android:text="Description"
            android:textColor="#5C5C5C"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="370dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:text="My Bread Is One Of The Best Bread Providers Served To All Customers. For us the quality of bread making is the main thing and really needs attention. That's why every quality of bread we serve is the best with a perfect taste on the tongue."
            android:textColor="#5C5C5C"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="520dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button"
            android:text="Tap to See Our Location"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
