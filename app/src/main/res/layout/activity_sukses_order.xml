<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/coklat_tua">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end">

            <ImageView
                android:id="@+id/keProfil"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_user" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/kembali"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_back" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/pict"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            app:cardBackgroundColor="#E5D4BF"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp">

            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-180dp"
                android:text="Payment"
                android:textStyle="bold"
                android:textColor="#46321A"
                android:textSize="28sp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/judul2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-140dp"
                android:text="Successful !"
                android:textStyle="bold"
                android:textColor="#46321A"
                android:textSize="28sp"
                android:layout_gravity="center"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/success" />
            </RelativeLayout>

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:text="Your order will arrive within 1 hour"
                android:textColor="#46321A"
                android:textSize="18sp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnKeHistory"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/pict"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:text="Check Your Orders"
            android:textSize="18sp"
            app:cornerRadius="30dp"
            app:textAllCaps="false"></Button>
    </RelativeLayout>

</RelativeLayout>